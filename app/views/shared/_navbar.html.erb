


<div class="navbar-wagon navbar-wagon-fixed navbar-transparent">
  <!-- Logo -->
  <div class="logo-navbar">
    <%= link_to "EasyIP", root_path %>
  </div>

  <% if user_signed_in? %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

      <p class="navbar-wagon-item">Welcome <%= current_user.email %></p>

      <!-- Search form -->
      <form action="/research" class="navbar-wagon-search">
        <input type="text" class="navbar-wagon-search-input" placeholder="Company name" name="roadshow[company]">
        <button type="submit" class="navbar-wagon-search-btn">
          <i class="fa fa-search"></i>
        </button>
      </form>

      <!-- Button (call-to-action) -->
      <%= link_to "Upload a new IP", new_roadshow_path, class: "navbar-wagon-item btn navbar-wagon-button "%>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <p class="dropdown-toggle navbar-wagon-link" id="navbar-wagon-menu" data-toggle="dropdown"> My Profile </p>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="#">My IP</a></li>
            <li>
              <%= link_to "Edit my Profile", edit_user_registration_path %>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </div>
      </div>


    </div>

    <!-- Dropdown appearing on mobile only -->
    <div class="navbar-wagon-item hidden-md hidden-lg">

      <!-- Search form -->


      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <form action="/research" class="navbar-wagon-search">
              <input type="text" class="navbar-wagon-search-input" placeholder="Company name" name="roadshow[company]">
              <button type="submit" class="navbar-wagon-search-btn">
                <i class="fa fa-search"></i>
              </button>
            </form>
          </li>
          <li><a href="#">View my IP</a></li>
          <li><%= link_to "Edit my Profile", edit_user_registration_path %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>

  <% else %>
    <%= link_to "Login", new_user_session_path, class: "btn-medium" %>
  <% end %>
</div>

