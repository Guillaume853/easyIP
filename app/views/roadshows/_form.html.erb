

<%= simple_form_for @roadshow do |f| %>
  <%= f.input :company, placeholder: "My Company", error: 'Company name is mandatory, please specify one' %>
  <%= f.input :url, placeholder: "http://www.mycompany.com", label:"Company Website" %>
  <%= f.input :message, placeholder: "Put here the announcement message", label: "Announcement Message" %>
  <%= f.input :start_date, label: "Start Date" %>
  <%= f.input :start_date_public, label: "Make start date public ?" %>
  <%= f.input :end_date, label: "End Date" %>
  <%= f.input :end_date_public, label: "Make end date public ?" %>
  <%= f.input :presentation, as: :attachinary, cloudinary: {pages: true} %>

  <p><strong>Confidentiality choices for the presentation :</strong></p>
  <%= f.input :download, label: "Allow presentation to be downloaded ?" %>
  <%= f.input :watermark, label: "Add watermark ?" %>

  <p>If you want the presentation to be accessible in the research bar only through a reference code, please specify one:</p>
  <%= f.input :reference_code, placeholder: "Reference Code" %>
  <%= f.button :submit, "Submit", class: "btn btn-primary" %>
<% end %>
<div class="padded"></div>
