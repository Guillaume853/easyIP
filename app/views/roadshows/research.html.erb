<div class="padded"></div>

<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <% if params[:roadshow] && (@roadshows != []) %>
        <h2>
          Results of your research:
        </h2>
      <% end %>

      <% if params[:roadshow] && (@roadshows == []) %>
        <h2>
        Sorry! No result matches your research
        </h2>
      <% end %>

      <%= render "listing" %>

    </div>
  </div>
</div>



