<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <% @roadshows.each do |roadshow, index| %>
        <div class="product">
          <%= link_to disclaimer_path(id: roadshow.id) do %>
            <% if roadshow.presentation? %>
              <%= cl_image_tag(roadshow.presentation.path.gsub(".pdf",""), height: 117, width: 175, :fetch_format=>:auto, :format=> :jpg, crop: :fill , class: 'product-image hidden-xs') %>
            <% else %>
              <img src="http://unsplash.it/300/200" alt="kudoz" class="product-image hidden-xs">
            <% end %>
          <% end %>
          <div class='product-body'>
            <h3>
              <%= link_to roadshow.company, disclaimer_path(id: roadshow.id) %>
            </h3>
            <h4>
              Last update : <%= roadshow.updated_at %>
            </h4>
            <p><%= roadshow.url%></p>
            <p>
              "<i><%=roadshow.message %> </i>"
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



